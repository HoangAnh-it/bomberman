<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="630.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="uet.gryffindor.scenes.OverSceneController">
    <children>
        <VBox prefHeight="624.0" prefWidth="800.0" styleClass="menuMain" stylesheets="@style.css">
            <children>
                <HBox alignment="CENTER" prefHeight="405.0" prefWidth="800.0">
                    <children>
                        <ImageView fitHeight="339.0" fitWidth="574.0" pickOnBounds="true" preserveRatio="true" style="-fx-position: center;">
                            <image>
                                <Image url="@img/menu/gameOver.png" />
                            </image>
                            <HBox.margin>
                                <Insets />
                            </HBox.margin>
                        </ImageView>
                    </children>
                </HBox>
                <HBox alignment="TOP_CENTER" prefHeight="146.0" prefWidth="800.0">
                    <children>
                        <Button fx:id="menuButton" mnemonicParsing="false" onAction="#backToMenu" prefHeight="40.0" prefWidth="150.0" stylesheets="@style.css" text=" MENU ">
                            <HBox.margin>
                                <Insets left="40.0" right="40.0" top="10.0" />
                            </HBox.margin>
                            <font>
                                <Font name="UTM Nokia" size="16.0" />
                            </font>
                        </Button>
                        <Button fx:id="resumeButton" layoutX="30.0" layoutY="200.0" mnemonicParsing="false" onAction="#playAgain" prefHeight="40.0" prefWidth="150.0" stylesheets="@style.css" text="RESUME">
                            <HBox.margin>
                                <Insets left="40.0" right="40.0" top="10.0" />
                            </HBox.margin>
                            <font>
                                <Font name="UTM Nokia" size="16.0" />
                            </font>
                        </Button>
                        <Button fx:id="quitButton" mnemonicParsing="false" onAction="#quitGame" prefHeight="40.0" prefWidth="150.0" stylesheets="@style.css" text="  QUIT  ">
                            <HBox.margin>
                                <Insets left="40.0" right="40.0" top="10.0" />
                            </HBox.margin>
                            <font>
                                <Font name="UTM Nokia" size="16.0" />
                            </font>
                        </Button>
                    </children>
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                    <padding>
                        <Insets top="20.0" />
                    </padding>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
